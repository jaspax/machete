{
  "manifest_version": 2,

  "name": "!! PLACEHOLDER NAME !!",
  "short_name": "Machete for Amazon Sellers",
  "description": "Upgrade your advertising campaign analytics for Amazon Sellers",
  "version": "0.1.0",
  "icons": { 
      "16": "images/machete-16.png",
      "48": "images/machete-48.png",
      "128": "images/machete-128.png" 
  },

  "page_action": {
    "default_name": "Machete for Amazon Sellers",
    "default_icon": "images/machete-128.png"
  },
  "permissions": [
    "alarms",
    "background", 
    "notifications",
    "https://sellercentral.amazon.com/*"
  ],
  "background": {
      "scripts": ["src/vendor.js", "src/seller-background.js"],
      "persistent": false
  },
  "content_scripts": [
      {
          "matches": ["https://sellercentral.amazon.com/hz/cm/*"],
          "js": ["src/vendor.js", "src/seller-dash.js"],
          "css": ["css/inject.css", "css/react-datepicker.css", "css/react-table.css"]
      }
  ],
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
  "web_accessible_resources": [
      "images/**",
      "*/*.html"
  ]
}
