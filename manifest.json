{
  "manifest_version": 2,

  "name": "Machete for Amazon",
  "short_name": "Machete",
  "description": "Make your Amazon Marketing reporting fully rad with campaign history graphs, keyword analytics, and extra awesome.",
  "version": "2.0.0",
  "version_name": "2.0 beta 1",
  "icons": { 
      "16": "images/machete-16.png",
      "48": "images/machete-48.png",
      "128": "images/machete-128.png" 
  },
  "page_action": {
    "default_name": "Machete for Amazon",
    "default_icon": {
        "16": "images/machete-16.png",
        "48": "images/machete-48.png",
        "128": "images/machete-128.png"
    }
  },
  "permissions": [
    "alarms",
    "background", 
    "notifications",
    "https://advertising.amazon.ca/*",
    "https://advertising.amazon.co.uk/*",
    "https://advertising.amazon.com/*",
    "https://advertising.amazon.de/*",
    "https://advertising.amazon.fr/*",
    "https://sellercentral.amazon.ca/*",
    "https://sellercentral.amazon.co.uk/*",
    "https://sellercentral.amazon.com/*",
    "https://sellercentral.amazon.de/*",
    "https://sellercentral.amazon.fr/*"
  ],
  "optional_permissions": [
    "https://kdp.amazon.com/*"
  ],
  "background": {
      "scripts": ["src/background.js"],
      "persistent": false
  },
  "content_scripts": [
      {
          "matches": [
              "https://advertising.amazon.ca/*",
              "https://advertising.amazon.co.uk/*",
              "https://advertising.amazon.com/*",
              "https://advertising.amazon.de/*",
              "https://advertising.amazon.fr/*"
          ],
          "js": ["src/dashboard.js"],
          "css": ["css/inject.css"]
      },
      {
          "matches": [
              "https://advertising.amazon.ca/ads/campaign/*",       "https://advertising.amazon.ca/rta/campaign/*",
              "https://advertising.amazon.co.uk/ads/campaign/*",    "https://advertising.amazon.co.uk/rta/campaign/*",
              "https://advertising.amazon.com/ads/campaign/*",      "https://advertising.amazon.com/rta/campaign/*",
              "https://advertising.amazon.de/ads/campaign/*",       "https://advertising.amazon.de/rta/campaign/*",
              "https://advertising.amazon.fr/ads/campaign/*",       "https://advertising.amazon.fr/rta/campaign/*",
              "https://advertising.amazon.ca/cm/sp/campaigns/*",
              "https://advertising.amazon.co.uk/cm/sp/campaigns/*",
              "https://advertising.amazon.com/cm/sp/campaigns/*",
              "https://advertising.amazon.de/cm/sp/campaigns/*",
              "https://advertising.amazon.fr/cm/sp/campaigns/*"
          ],
          "js": ["src/campaign.js"],
          "css": ["css/inject.css"]
      },
      {
          "matches": ["https://kdp.amazon.com/*"],
          "js": ["src/kdp.js"],
          "css": ["css/inject.css"]
      }
  ],
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
  "web_accessible_resources": ["images/**"]
}
