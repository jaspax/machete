{
  "manifest_version": 2,

  "name": "Machete for Amazon",
  "short_name": "Machete",
  "description": "Make your Amazon Marketing reporting fully rad with campaign history graphs, keyword analytics, and extra awesome.",
  "version": "1.4.7.1",
  "version_name": "1.4.7 beta 1",
  "icons": { 
      "16": "images/machete-16.png",
      "48": "images/machete-48.png",
      "128": "images/machete-128.png" 
  },
  "page_action": {
    "default_name": "Machete for Amazon",
    "default_icon": {
        "16": "images/machete-16.png",
        "48": "images/machete-48.png",
        "128": "images/machete-128.png"
    }
  },
  "permissions": [
    "alarms",
    "background", 
    "notifications",
    "https://machete-app.com/*",
    "https://ams.amazon.com/*",
    "https://sellercentral.amazon.com/*"
  ],
  "background": {
      "scripts": ["src/background.js"],
      "persistent": false
  },
  "content_scripts": [
      {
          "matches": ["https://ams.amazon.com/ads/campaigns*", "https://ams.amazon.com/ads/dashboard*"],
          "js": ["src/dashboard.js"],
          "css": ["css/inject.css"]
      },
      {
          "matches": ["https://ams.amazon.com/ads/campaign/*", "https://ams.amazon.com/rta/campaign/*"],
          "js": ["src/campaign.js"],
          "css": ["css/inject.css"]
      },
      {
          "matches": ["https://sellercentral.amazon.com/hz/cm/*"],
          "js": ["src/seller-dash.js"],
          "css": ["css/inject.css"]
      }
  ],
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
  "web_accessible_resources": ["images/**"]
}
