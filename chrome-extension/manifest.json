{
  "manifest_version": 2,

  "name": "Machete - Your tool for cutting through AMS",
  "short_name": "Machete",
  "description": "Make your AMS reporting fully rad with campaign history graphs, keyword analytics, and extra awesome.",
  "version": "1.1.1",
  "icons": { 
      "16": "images/machete-16.png",
      "48": "images/machete-48.png",
      "128": "images/machete-128.png" 
  },

  "page_action": {
    "default_name": "Machete",
    "default_icon": "images/machete-128.png"
  },
  "permissions": [
    "alarms",
    "background", 
    "notifications",
    "https://ams.amazon.com/*",
    "https://machete-app.com/*"
  ],
  "background": {
      "scripts": ["extern/jquery.min.js", "common/common.js", "common/ga.js", "background/background.js"],
      "persistent": false
  },
  "content_scripts": [
      {
          "matches": ["https://ams.amazon.com/ads/campaigns*", "https://ams.amazon.com/ads/dashboard*"],
          "js": ["extern/jquery.min.js", "extern/plotly-latest.min.js", 
                 "common/common.js", "common/ga.js", "dashboard/dashboard.js"],
          "css": ["inject.css"]
      },
      {
          "matches": ["https://ams.amazon.com/ads/campaign/*", "https://ams.amazon.com/rta/campaign/*"],
          "js": ["extern/jquery.min.js", "extern/plotly-latest.min.js", "extern/jquery.dataTables.min.js", 
                 "extern/moment.min.js", "extern/pikaday.js",
                 "common/common.js", "common/ga.js", "campaign/campaign.js"],
          "css": ["inject.css", "extern/jquery.dataTables.min.css", "extern/pikaday.css"]
      }
  ],
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
  "web_accessible_resources": [
      "images/**",
      "*/*.html"
  ]
}
