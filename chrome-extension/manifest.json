{
  "manifest_version": 2,

  "name": "AMS Unlocked",
  "description": "Make your AMS reporting fully rad with campaign history graphs, keyword charts, and extra awesome.",
  "version": "0.2",
  "icons": { 
      "16": "images/unlock-16.png",
      "48": "images/unlock-48.png",
      "128": "images/unlock-128.png" 
  },

  "page_action": {
    "default_name": "AMS Unlocked",
    "default_icon": "images/unlock-128.png"
  },
  "permissions": [
    "alarms",
    "background", 
    "https://ams.amazon.com/*",
    "https://fierce-caverns-29914.herokuapp.com/"
  ],
  "background": {
      "scripts": ["background/background.js", "extern/jquery.min.js"],
      "persistent": false
  },
  "content_scripts": [
      {
          "matches": ["https://ams.amazon.com/ads/campaigns/*", "https://ams.amazon.com/ads/dashboard*"],
          "js": ["extern/jquery.min.js", "extern/plotly-latest.min.js", "common/common.js", "dashboard/dashboard.js"],
          "css": ["inject.css"]
      },
      {
          "matches": ["https://ams.amazon.com/ads/campaign/*"],
          "js": ["extern/jquery.min.js", "extern/plotly-latest.min.js", "common/common.js", "campaign/campaign.js"],
          "css": ["inject.css"]
      }
  ],
  "web_accessible_resources": [
      "images/*",
      "*/*.html"
  ]
}
