{
  "manifest_version": 2,

  "name": "AMS Unlocked",
  "description": "Make your AMS reporting fully awesome.",
  "version": "1.0",

  "page_action": {
    "default_name": "AMS Unlocked",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "alarms",
    "background", 
    "http://*.amazon.com/*",
    "https://*.amazon.com/*",
    "https://fierce-caverns-29914.herokuapp.com/"
  ],
  "background": {
      "scripts": ["background.js", "extern/jquery.min.js"],
      "persistent": false
  },
  "content_scripts": [
      {
          "matches": ["https://ams.amazon.com/ads/*"],
          "js": ["extern/jquery.min.js", "extern/plotly-latest.min.js", "inject.js"]
      }
  ]
}
